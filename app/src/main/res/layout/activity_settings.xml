<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yearTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="Emploi du temps : "
                android:textColor="?attr/colorControlNormal"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:background="?layoutBackground"
                android:clickable="true"
                android:contextClickable="true"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/settings_element_space">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Année :"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/yearChoice"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/year_array"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:background="?layoutBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Retourner à la dernière position au lancement"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/keepPositionOfEdt"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:showText="false"
                    android:switchMinWidth="55dp"
                    tools:checked="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="Notifications : "
                android:textColor="?attr/colorControlNormal"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:background="?layoutBackground"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/settings_element_space">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Nouvel emploi du temps"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/notifNewEdt"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:showText="false"
                    android:switchMinWidth="55dp"
                    tools:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_element_height"
                android:background="?layoutBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Changement d'emploi du temps"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/notifEdtChanged"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:showText="false"
                    android:switchMinWidth="55dp"
                    tools:checked="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/infos"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fontFamily="sans-serif"
                android:gravity="bottom|center_horizontal"
                android:text="By Timothée Métais (c'est un bg et il s'aime beaucoup), pas responsable d'une absence d'un élève, si mauvais fonctionnement de l'appli (svp me tapez pas si ça arrive)"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>