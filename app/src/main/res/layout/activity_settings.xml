<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/yearTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:text="Emploi du temps : "
            android:textColor="?attr/colorControlNormal"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?layoutBackground"
            android:clickable="true"
            android:contextClickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Année :"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/yearChoice"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/year_array"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:text="Notifications : "
            android:textColor="?attr/colorControlNormal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notificationFuturText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?layoutBackground"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="à venir ..."
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="bottom|center_horizontal"
            android:text="By TImothée Métais (c'est un bg et il s'aime beaucoup), pas responsable d'une absence d'un élève, si mauvais fonctionnement de l'appli (svp me tapez pas si ça arrive)"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="15sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>